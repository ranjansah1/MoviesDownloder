<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >
<androidx.cardview.widget.CardView
    android:layout_width="330dp"
    android:layout_height="200dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    android:id="@+id/sample_card"
    app:cardCornerRadius="10dp"
    android:background="@drawable/card_view_bg"

    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/wakanda"
        android:background="@drawable/card_view_bg"
        android:id="@+id/Sample_card_img"
        android:scaleType="centerCrop"/>


</androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:background="@drawable/smaple_tb_bg"
        android:fontFamily="@font/alatsi"
        android:padding="7dp"
        android:text="HINDI DUBBED"
        android:textColor="@color/white"
        android:translationZ="90dp"
        android:id="@+id/CardHindiDubbedTb"
        app:layout_constraintBottom_toBottomOf="@id/sample_card"
        app:layout_constraintRight_toRightOf="@id/sample_card"
        app:layout_constraintTop_toBottomOf="@id/sample_card" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/10"
        android:textColor="@color/ITA"
        app:layout_constraintTop_toTopOf="@id/sample_card"
        app:layout_constraintLeft_toLeftOf="@id/sample_card"
        android:translationZ="90dp"
        android:fontFamily="@font/alatsi"
        android:textSize="19sp"
        android:layout_marginLeft="10dp"
        android:id="@+id/Card_countTb"/>






</androidx.constraintlayout.widget.ConstraintLayout>